{{!< default}}

{{#post}}

  {{> header
        header-page=true
		header-center=true
        title=title}}

  <main class="container hide-on-menu">
    <div class="page-content page-full-width">
      {{#if @member.paid}}
        <div class="text-center">{{t "Redirecting..."}}</div>
      {{else}}
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
            <div class="text-center">
              {{content}}
            </div>
          </div>
        </div>
        <div class="row membership-plans">
          {{#unless @member}}
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
              <div class="card">
                <div class="card-body">
                  <div class="card-subtitle text-center">{{t "Free"}}</div>
                  <div class="card-title text-center"><sup>$</sup>0</div>
                  <ul>
                    <li>Full access to posts for subscribers</li>
                    <li>Weekly email newsletter</li>
                    <li>No advertising</li>
                  </ul>
                  <div class="text-center">
                    <a href="{{@site.url}}/sign-up" class="btn btn-primary">{{t "Subscribe Now"}}</a>
                  </div>
                </div>
              </div>
            </div>
          {{/unless}}
          <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="card">
              <div class="card-body">
                <div class="card-subtitle text-center">{{t "Monthly"}}</div>
                <div class="card-title text-center"><sup>$</sup>{{@price.monthly}}</div>
                <ul>
                  <li>Full access to all premium posts</li>
                  <li>Weekly email newsletter</li>
                  <li>Support independent publishing</li>
                  <li>Simple, secure card payment</li>
                  <li>No advertising</li>
                </ul>
                <div class="text-center">
                  <button class="btn btn-primary" role="link" data-members-success="{{@site.url}}/payment-success/"
                    data-members-cancel="{{@site.url}}/payment-error/"
                    data-members-plan="Monthly">{{t "Subscribe Now"}}</button>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
            <div class="card">
              <div class="card-body">
                <div class="card-subtitle text-center">{{t "Yearly"}}</div>
                <div class="card-title text-center"><sup>$</sup>{{@price.yearly}}</div>
                <ul>
                  <li>Full access to all premium posts</li>
                  <li>Weekly email newsletter</li>
                  <li>Support independent publishing</li>
                  <li>Simple, secure card payment</li>
                  <li>One easy payment instead of 12!</li>
                  <li>No advertising</li>
                </ul>
                <div class="text-center">
                  <button class="btn btn-primary" role="link" data-members-success="{{@site.url}}/payment-success/"
                    data-members-cancel="{{@site.url}}/payment-error/"
                    data-members-plan="Yearly">{{t "Subscribe Now"}}</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="small text-center text-muted mt-1">
          {{t "Already have an account?"}} <a href="{{@site.url}}/sign-in">{{t "Sign in"}}</a>
        </div>
      {{/if}}
    </div>
  </main>
{{/post}}