{{!< default}}

{{#post}}
  {{> header
        header-post=true
        header-image=feature_image
        cover-half=true
        }}
{{/post}}
<main id="main" class="container container-content hide-on-menu">
  {{#post}}
    <div class="row">
      <section class="posts posts-single">
        <article class="post-content">
          {{#if access}}
            {{{content}}}
          {{else}}
            <div class="membership-hidden-content">
              {{excerpt}}
            </div>
            <div class="card mb-2">
              <div class="card-body">
                <div class="text-center">
                  {{#if @member}}
                    <span class="h3">{{t "This post is for paying subscribers only"}}</span>
                  {{else}}
                    <span class="h3">{{t "This post is for subscribers only"}}</span>
                  {{/if}}
                </div>
                <hr />
                <p class="mb-0">You don't have access to this post on <strong>{{@site.title}}</strong>
                  at the moment, but if you upgrade your account you'll be able to see the whole
                  thing, as well as all the other posts in the archive! Subscribing only takes a few
                  seconds and will give you immediate access.</p>
                <hr />
                <div class="text-center">
                  <a class="btn btn-primary btn-lg mb-1" href="{{@site.url}}/sign-up">{{t "Subscribe now"}}</a>
                  <div class="small text-muted">{{t "Already have an account?"}} <a href="{{@site.url}}/sign-in">Sign
                      In</a></div>
                </div>
              </div>
            </div>
          {{/if}}
        </article>
        <div class="row">
          {{#if tags}}
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
              <div class="widget widget-inline">
                <h2 class="widget-title">{{t "Tags"}}</h2>
                <div class="tag-cloud">
                  {{#foreach tags}}
                    <a href="{{url}}">{{name}}</a>
                  {{/foreach}}
                </div>
              </div>
            </div>
          {{/if}}
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
            <div class="widget widget-inline">
              <h2 class="widget-title">{{t "Share"}}</h2>
              <div class="tag-cloud">
                <a href="http://wwww.facebook.com/sharer.php?u={{url absolute="yes"}}" target="_blank"><i
                    class="fa fa-facebook"></i></a>
                <a href="http://twitter.com/share?text={{title}}&url={{url absolute="yes"}}" target="_blank"><i
                    class="fa fa-twitter"></i></a>
              </div>
            </div>
          </div>
        </div>
        {{#unless page}}
          {{> widgets/inline-author}}
          <div class="post-comments">
            {{> widgets/inline-post-comments}}
          </div>
          {{> widgets/inline-related-posts}}
        {{/unless}}
      </section>
      {{> sidebar}}
    </div>
  {{/post}}
</main>